---
import Container from "../components/shared/Container.astro";
import Paragraph from "../components/shared/Paragraph.astro";
---

<div class="relative mt-16 bg-base-200 dark:bg-base-dark-800">
  <footer class="relative pt-28 rounded-t-3xl">
    <Container className="pb-8 relative overflow-auto ">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 relative">
        <div class="h-auto flex flex-col">
          <a href="#" class="relative flex items-center gap-3">
            <div class="inline-flex text-lg font-semibold text-heading-1">
              SISTEQ Control
            </div>
          </a>
          <Paragraph className="mt-4">
            Contacto: contacto@sisteqcontrol.com
          </Paragraph>
          <Paragraph>
            Teléfono: +52 222 373 3576
          </Paragraph>
          <Paragraph>
            Ubicación: Puebla, México.
          </Paragraph>
        </div>
      </div>
    </Container>
    <div class="py-2 relative text-center text-heading-3">
      <Container>
        <div>&copy; <span id="year"></span> SISTEQ Control. Todos los derechos reservados.</div>
      </Container>
    </div>
  </footer>
</div>
